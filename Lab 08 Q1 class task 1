#include <stdio.h>
int main(){
    int a,b;
    printf("Enter the number you want to print the table :");
    scanf("%d",&a);
    printf("\n");
    printf("\t\t----Multiplication Table (1-%d)----\n\n",a);
    for (int i = 1; i <= a; i++)
    {
        printf("%d:\t",i);
        for (int j = 1; j <= 10; j++)
        {
            b=i*j;
            printf("%3d\t",b);
        }
        printf("\n");
    }
    return 0;
}
